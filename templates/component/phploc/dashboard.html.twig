{% for component in components|filter(v => v.name == 'global_loc') %}
<div class="card {{ component.options.class }} mt-3 mb-3">
    <div class="card-header">
        <h6 class="card-text">
            <i class="{{ component.options.icon }} mr-2"></i>
            {{ component.label|capitalize }}
        </h6>
    </div>
    <ul class="list-group list-group-flush">
        {% for item in component.data %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="{% if 0 == item.level %}font-weight-bold{% endif %} ">
                    {% for count in range(0, item.level) %}
                        <span class="ml-2"></span>
                    {% endfor %}
                    {{ item.label }}
                </span>
                <span>{{ item.value }}</span>
            </li>
        {% endfor %}
    </ul>
</div>
{% endfor %}


{% for component in components %}
    <div class="card {{ component.options.class|e }} mt-3 mb-3">
        <div class="card-header">
            <h6 class="card-text">
                <i class="{{ component.options.icon }} mr-2"></i>
                {{ component.label|capitalize }}
            </h6>
        </div>
        <ul class="list-group list-group-flush">
            {% for filename, item in component.data %}
                <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-danger">
                    <span>{{ filename }}</span>
                    <span>{{ item.errors }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Message</th>
                            <th class="text-center">Line</th>
                            <th class="text-center">Ignorable</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set lines = item.messages|column('line') %}
                        {% for message in item.messages %}
                        <tr class="{% if message.ignorable %}text-black-50{% endif %}">
                            <td>{{ message.message }}</td>
                            <td class="text-center">{{ message.line }}</td>
                            <td class="text-center">{{ message.ignorable ? 'Yes' : 'No' }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </li>
                <li class="list-group-item">
                    <pre data-line="{{ lines|join(',') }}" data-src="plugins/line-highlight/prism-line-highlight.js"><code class="line-numbers language-{{ filename|extractFileExtension }}">{{ filename|prettify }}</code></pre>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endfor %}
